@model FarmPhoto.Website.Models.ForgottenPasswordModel 

@{
    ViewBag.Title = "Forgotten Password";
}
<div id="ContentContainer">
    <div class="ContentContainerHeader">
        <h2>Forgotten Password</h2>
        <h3>Enter your Username below and a reminder email will be sent to your email address</h3>
    </div>

    @using (Html.BeginForm("ForgottenPassword", "Account", FormMethod.Post, new {@class = "form-createaccount"}))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })

        <button class="btn btn-primary" type="submit">Send Reminder</button>
    }

</div>
