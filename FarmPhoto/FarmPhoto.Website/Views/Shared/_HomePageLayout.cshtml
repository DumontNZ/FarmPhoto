<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="page">
        <header>
            <h1>Farm Photo</h1>
        </header>
    </div>

    <div id="MainPageContent">
        <div id="MainLeftColumn">
            <ul id="menu">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Gallery", "Index", "Gallery")</li>
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Submit Photo", "Index", "Submission")</li>
                    <li>@Html.ActionLink("My Photos", "MyImages", "Gallery")</li>
                }
                else
                { 
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    <li>@Html.ActionLink("Register", "Create", "Account")</li>
                }
            </ul>
        </div>

        <div id="MainInnerContent">
            @RenderBody()
        </div>

        <div id="MailRightColumn">
            <p>Right Column</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
