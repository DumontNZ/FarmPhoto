@using FarmPhoto.Domain
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")

    @Styles.Render("~/Content/themes/base/css")
    <script src="~/Scripts/Bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/Confirmation/jquery.confirm.js"></script>
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@

</head>
<body>
    
    <div id="header">
        <img src="~/Content/Images/banner2.jpg" />
        @*<img src="~/Content/Images/P1030794.JPG"/>*@
    </div>

    <div id="PageContent">
        <div id="LeftColumn">
            <ul id="menu">
                 <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Gallery", "Index", "Gallery")</li>
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Submit Photo", "Index", "Submission")</li>
                    <li>@Html.ActionLink("My Photos", "MyPhotos", "Gallery")</li>
                }
                else
                { 
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    <li>@Html.ActionLink("Register", "Create", "Account")</li>
                }
                @if (CurrentUser.IsAdministrator)
                {
                    <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
                }
                <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>
                
                 @if (Request.IsAuthenticated)
                 {
                     <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                 }
            </ul>
        </div>

        <div id="InnerContent">
            @RenderBody()
        </div>
        
        <div id="RightColumn">
            <p>Right Column</p>
        </div>
        
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
