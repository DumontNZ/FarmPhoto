@using FarmPhoto.Domain
@using FarmPhoto.Website.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")

    @Styles.Render("~/Content/themes/base/css")
    <script src="~/Scripts/Bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/Confirmation/jquery.confirm.js"></script>
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">FarmPhoto</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @Html.MenuItemAction("Home", "Index", "Home")
                        @Html.MenuItemRoute("Gallery", "GalleryPage", "Index", "Gallery", new{page = 1 })
                        @Html.MenuItemAction("Submit", "Index", "Submission")

                        @if (Request.IsAuthenticated)
                        {
                            @Html.MenuItemRoute("My Photos", "MyPhotos", "MyPhotos", "Gallery", new{page = 1 })
                        }
                        else
                        { 
                            @Html.MenuItemAction("Login", "Login", "Account")
                            @Html.MenuItemAction("Register", "Create", "Account")
                        }
                        @if (Request.IsAuthenticated)
                        {
                            if (CurrentUser.IsAdministrator)
                            {
                                @Html.MenuItemAction("Administration", "Index", "Admin")
                            }
                        }
                        @Html.MenuItemAction("About Us", "AboutUs", "Home")

                        @if (Request.IsAuthenticated)
                        {
                            @Html.MenuItemAction("Logout", "Logout", "Account")
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="header">
        @*<img src="~/Content/Images/banner2.jpg" />*@
        <img src="~/Content/Images/KensBanner.png" />
        @*<img src="~/Content/Images/P1030794.JPG"/>*@
    </div>

    <div id="PageContent">
        @*<div id="LeftColumn">
            <ul id="menu">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.RouteLink("Gallery", "GalleryPage", new { page = 1 })</li>
                <li>@Html.ActionLink("Submit Photo", "Index", "Submission")</li>

                @if (Request.IsAuthenticated)
                {
                    <li>@Html.RouteLink("My Photos", "MyPhotos", new { page = 1 })</li>
                }
                else
                { 
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    <li>@Html.ActionLink("Register", "Create", "Account")</li>
                }
                @if (Request.IsAuthenticated)
                {
                    if (CurrentUser.IsAdministrator)
                    {
                    <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
                    }
                }

                <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>

                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                }
            </ul>*@
        @*</div>*@

        <div id="InnerContent">
            @RenderBody()
        </div>

        @*<div id="RightColumn">
            <p>Right Column</p>
        </div>*@

    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
