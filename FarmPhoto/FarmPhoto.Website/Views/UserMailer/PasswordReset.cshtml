@{
    var viewData = ViewBag.Data;
}

<p>
    Hi @viewData.FirstName
</p>

<p>
    A request has been made for a new password. If you did not request the password reset please ignore this email.
</p>
<p>
    Otherwise follow the link below.
</p>
<p>
    <a href="@viewData.PasswordResetLink">Reset Password</a>
</p>
<p>
    The above link will expire in 3 hours. 
</p>
